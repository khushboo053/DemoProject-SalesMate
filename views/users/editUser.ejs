<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css" />
<link rel="stylesheet" href="/css/main.css" />
<body>
  <main>
    <form class="login-form" action="/editUser/<%= user.id %>" method="POST">
      <h1>Update User</h1>
      <div class="form-control">
        <label for="firstName">First Name</label>
        <input
          type="text"
          name="firstName"
          id="firstName"
          value="<%= user.firstName %>"
        />
      </div>
      <div class="form-control">
        <label for="lastName">Last Name</label>
        <input
          type="text"
          name="lastName"
          id="lastName"
          value="<%= user.lastName %>"
        />
      </div>
      <div class="form-control">
        <label for="email">Email</label>
        <input type="email" name="email" id="email" value="<%= user.email %>" />
      </div>
      <div class="form-control">
        <label for="role">Role</label>
        <div>
          <input type="radio" name="role" id="admin" value="admin" <%= user.role
          === 'admin' ? 'checked' : '' %> />
          <label for="admin">Admin</label>
        </div>
        <div>
          <input type="radio" name="role" id="user" value="user" <%= user.role
          === 'user' ? 'checked' : '' %> />
          <label for="user">User</label>
        </div>
      </div>

      <button class="btn" type="submit">Update User</button>
    </form>
  </main>
  <%- include('../includes/end.ejs') %>
</body>
