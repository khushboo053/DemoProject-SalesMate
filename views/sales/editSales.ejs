<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css" />
<link rel="stylesheet" href="/css/main.css">
<!-- <link rel="stylesheet" href="/css/sidebar.css"> -->
<body>
    <main>
      <%- include('../includes/sidebar.ejs') %>
      <div class="main-content">
        <button id="openBtn" class="open-btn">&#9776; Open Sidebar</button>
        <form
        class="login-form"
          action="/editSales/<%= sales.id %>"
          method="POST"
        >
        <h1>Update Sales</h1>
          <div class="form-control">
              <label for="product_id">ProductId</label>
              <input type="text" name="product_id" id="product_id" value="<%= sales.product_id %>"/>
            </div>

            <div class="form-control">
              <label for="qty">Quantity</label>
              <input type="text" name="qty" id="qty" value="<%= sales.qty %>"/>
            </div>
            
            <div class="form-control">
              <label for="price">Price</label>
              <input type="text" name="price" id="price" value="<%= sales.price %>"/>
            </div>

            <div class="form-control">
              <label for="total">Total</label>
              <input type="text" name="total" id="total" value="<%= sales.total %>"/>
            </div>
            
            <button class="btn" type="submit">Update Sales</button>
          </form>
        </div>
  </main>
<script src="js/dashboard.js"></script>
  <%- include('../includes/end.ejs') %>