<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="css/forms.css">
<link rel="stylesheet" href="css/main.css">
<body>
    <main>
        <% if (user.role === 'admin') { %>
          <%- include('../includes/adminSidebar.ejs') %>
        <% } else if (user.role === 'user') { %>
          <%- include('../includes/sidebar.ejs') %>
        <% } else { %>
          <%- include('../includes/supplierSidebar.ejs') %>
        <% } %>
        
        <div class="main-content">
            <button id="openBtn" class="open-btn">&#9776; Open Sidebar</button>
            <form
            class="login-form"
            action="/createSales"
            method="POST"
          >
            <h1>Create Sales</h1>

            <div class="form-control">
              <label for="product_id">ProductId</label>
              <input type="text" name="product_id" id="product_id"/>
            </div>

            <div class="form-control">
              <label for="qty">Quantity</label>
              <input type="text" name="qty" id="qty"/>
            </div>

            
            <button class="btn" type="submit">Create Sales</button>
          </form>
        </div>
    </main>
    <script src="js/dashboard.js"></script>
<%- include('../includes/end.ejs') %>